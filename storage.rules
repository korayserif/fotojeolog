rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Kullanıcıya özgü erişim - HER ZAMAN GÜNCEL KULLANICIYI KONTROL ET
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Eski yapılar için geriye uyumluluk (deprecated)
    match /fotojeolog_saha_arsivi/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
